<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:a="urn:import:org.xebia.conference.view.gwt.client.managed.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:r="urn:import:org.xebia.conference.view.gwt.client.scaffold.ui">
  <ui:style>
    .outer {
      padding: 10px;
    }
    .error {
      padding-left: 0.5em;
      background-color: red;
    }
    .label {
      font-weight: bold;
    }
    .value {
      padding-bottom: 10px;
    }
  </ui:style>
 
  <g:HTMLPanel debugId="boundElementHolder" styleName="{style.outer}">
    <div class="{style.error}" ui:field="errors"/>
    
    <div id="title">
            <div class="{style.label}">Title</div>
            <div class="{style.value}">
                <g:TextBox ui:field="title"/>
            </div>
        </div>
    <div id="description">
            <div class="{style.label}">Description</div>
            <div class="{style.value}">
                <g:TextBox ui:field="description"/>
            </div>
        </div>
    <div id="created">
            <div class="{style.label}">Created</div>
            <div class="{style.value}">
                <d:DateBox ui:field="created"/>
            </div>
        </div>
    <div id="speaker">
            <div class="{style.label}">Speaker</div>
            <div class="{style.value}">
                <g:ValueListBox ui:field="speaker"/>
            </div>
        </div>

    <g:Button ui:field="save">Save</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>
